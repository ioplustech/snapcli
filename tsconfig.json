{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/index.ts", "./.eslintrc.js", "test"],
  "exclude": ["node_modules"]
}
